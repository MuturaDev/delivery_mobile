<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Style for "rectangle" -->
    <!-- Add this snippet to layer-list xml in drawable. -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dp"
                />
            <solid android:color="@color/colorWhite"  />
            <stroke android:width="1dp" android:color="@color/colorGrey"/>
            <item android:name="android:shadowColor">@color/colorWhite</item>
            <!-- TextView shadow offsets do not respect scale. -->
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">11</item>

        </shape>
    </item>
</selector>