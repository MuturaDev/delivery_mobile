<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="0dp"
    android:layout_height="wrap_content">


    <!--    Title-->



    <!--    data-->
    <LinearLayout
        android:id="@+id/data_layout_ID"
        android:layout_marginTop="5dp"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_toRightOf="@+id/btn_edit"
            android:id="@+id/txt_date"
            android:textSize="12sp"
            android:textStyle="normal"
            android:textAlignment="textStart"
            android:textColor="@color/colorBlack"
            android:text="12/04/21"
            android:fontFamily="@font/poppins_regular"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_amount"
            android:layout_toRightOf="@+id/txt_date"

            android:textSize="12sp"
            android:textStyle="normal"
            android:textColor="@color/colorBlack"
            android:text="2,005,000/="
            android:fontFamily="@font/poppins_regular"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_method"
            android:layout_toRightOf="@+id/txt_amount"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:textStyle="normal"
            android:textColor="@color/colorBlack"
            android:text="MPESA"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_ref"
            android:layout_toRightOf="@+id/txt_method"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:textStyle="normal"
            android:textAlignment="textEnd"
            android:textColor="@color/colorBlack"
            android:text="DJFLAJDLJF"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>


        <ImageView
            android:id="@+id/btn_edit"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:src="@drawable/pencil_icon"
            android:layout_height="15dp"/>




    </LinearLayout>




</LinearLayout>