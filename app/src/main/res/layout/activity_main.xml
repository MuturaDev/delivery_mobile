<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    >

<!--    https://stackoverflow.com/questions/43255496/remove-android-widget-toolbar-shadow#:~:text=Use%20attribute%20app%3Aelevation%3D%22,%3D%220dp%22%20to%20Toolbar%20.&text=%23.,-If%20you%20are-->
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:id="@+id/activity_main"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <com.google.android.material.appbar.AppBarLayout
               android:layout_width="match_parent"
               android:translationZ="0.1dp"
               app:elevation="0dp"
               android:layout_height="wrap_content">

               <androidx.appcompat.widget.Toolbar
                   android:id="@+id/toolbar"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@color/colorPrimary"
                   android:paddingRight="5dp">

                   <include
                       layout="@layout/top_master_action_bar_layout"/>

               </androidx.appcompat.widget.Toolbar>

           </com.google.android.material.appbar.AppBarLayout>



           <include
               layout="@layout/top_master_activity_header_with_backright_layout"/>

           <include
               layout="@layout/top_master_activity_header_with_backleft_layout"/>



           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <FrameLayout
                   android:visibility="visible"
                   android:id="@+id/container"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1" />


               <com.bg.deliveryapp.customview.GifImageView
                   android:id="@+id/GifImageView"
                   android:visibility="gone"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerInParent="true" />

               <RelativeLayout
                   android:visibility="gone"
                   android:layout_centerInParent="true"
                   android:id="@+id/no_content_after_filter"
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:layout_centerHorizontal="true"
                       android:id="@+id/image"
                       android:layout_width="200dp"
                       android:layout_height="100dp"
                       android:src="@drawable/empty_state"/>

                   <TextView
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="70dp"
                       android:id="@+id/text"
                       android:text="No results found"
                       android:textSize="20sp"
                       android:fontFamily="@font/poppins_bold"
                       android:textColor="@color/colorBlack"
                       android:textStyle="bold"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>


                   <TextView
                       android:layout_marginRight="40dp"
                       android:textAlignment="center"
                       android:layout_marginLeft="40dp"
                       android:layout_centerHorizontal="true"
                       android:layout_below="@+id/text"
                       android:text="Try adjusting your search
to find what you are looking for"
                       android:textSize="12sp"
                       android:textColor="@color/colorGrey"
                       android:textStyle="bold"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>



               </RelativeLayout>



           </RelativeLayout>



       </LinearLayout>

       <TextView
           android:layout_alignParentBottom="true"
           android:visibility="gone"
           android:id="@+id/internet_view"
           android:layout_width="match_parent"
           android:background="@android:color/holo_red_dark"
           android:text="No Internet Connection!!"
           android:textAlignment="center"
           android:textSize="12sp"
           android:textColor="@color/colorWhite"
           android:layout_height="15dp"/>
   </RelativeLayout>




</androidx.cardview.widget.CardView>
