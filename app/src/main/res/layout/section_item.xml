<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_zero_margin"
    android:layout_marginLeft="@dimen/card_side_margin"
    android:layout_marginRight="@dimen/card_side_margin"
    android:layout_marginTop="@dimen/card_side_margin"
    android:background="@android:drawable/list_selector_background"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp"
    app:cardPreventCornerOverlap="false">


   <LinearLayout
       android:paddingLeft="15dp"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <ImageButton
               android:id="@+id/left_image"
               android:layout_marginRight="3dp"
               android:layout_marginTop="10dp"
               android:layout_alignParentLeft="true"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:background="@drawable/view_customer_item_bg"/>

           <TextView
               android:id="@+id/sectionHeader"
               android:layout_toRightOf="@id/left_image"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="16sp"
               android:padding="10dp"
               android:textSize="16sp"
               android:textStyle="bold"/>

       </RelativeLayout>


       <View
           android:layout_width="match_parent"
           android:layout_height="0.5dp"
           android:layout_marginTop="5dp"
           android:layout_gravity="bottom"
           android:layout_marginRight="20dp"
           android:background="#22424242"/>

   </LinearLayout>

</androidx.cardview.widget.CardView>