<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:background="@drawable/edit_text_layout_bg_lightblue"
            android:layout_height="45dp">



            <Spinner
                android:id="@+id/sp_customer_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:paddingLeft="15dp"
                android:textSize="13sp"
                android:layout_marginRight="25dp"
                android:background="@android:color/transparent"
                android:entries="@array/sp_select_customer"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <ProgressBar
                android:id="@+id/pb_customer_type"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:indeterminateTint="@android:color/black"
                android:layout_centerInParent="true"
                android:visibility="gone" />

            <!--                -->
            <ImageView
                android:id="@+id/img_customer_type"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:src="@drawable/bottom_icon" />


        </RelativeLayout>

        <EditText
            android:id="@+id/et_customer_name"

            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="@string/et_location"
            android:background="@drawable/edit_text_layout_bg_lightblue"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:paddingLeft="26dp"
            android:textColorHint="@color/colorBlack"
            android:textStyle="normal"
            android:inputType="text"
            android:singleLine="true" />

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:background="@drawable/edit_text_layout_bg_lightblue"
            android:layout_height="45dp">



            <EditText
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:hint="@string/et_order_date"
                android:background="@null"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:paddingLeft="15dp"
                android:textColorHint="@color/colorBlack"
                android:textStyle="normal"
                android:inputType="text"
                android:singleLine="true" />



            <!--                -->
            <ImageView

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:src="@drawable/calendar_icon" />


        </RelativeLayout>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            app:cardElevation="0dp"
            android:layout_height="45dp">


            <RelativeLayout
                android:padding="12dp"
                android:orientation="horizontal"
                android:background="@drawable/view_customer_item_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_alignParentLeft="true"
                        android:id="@+id/order_status"
                        android:layout_marginTop="2dp"
                        android:layout_width="12dp"
                        android:src="@drawable/blue_circle"
                        android:elevation="5dp"
                        android:layout_height="12dp"/>

                    <TextView
                        android:layout_marginLeft="15dp"
                        android:text="@string/rd_retail"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="2dp"
                        android:layout_width="12dp"
                        android:src="@drawable/white_circle"
                        android:elevation="5dp"
                        android:layout_height="12dp"/>

                    <TextView
                        android:layout_marginLeft="15dp"
                        android:text="@string/rd_wholesale"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>



                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            app:cardElevation="0dp"
            android:layout_height="45dp">


            <RelativeLayout
                android:padding="12dp"
                android:orientation="horizontal"
                android:background="@drawable/view_customer_item_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="2dp"
                        android:layout_width="12dp"
                        android:src="@drawable/blue_circle"
                        android:elevation="5dp"
                        android:layout_height="12dp"/>

                    <TextView
                        android:layout_marginLeft="15dp"
                        android:text="@string/rd_delivery"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="38dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="2dp"
                        android:layout_width="12dp"
                        android:src="@drawable/white_circle"
                        android:elevation="5dp"
                        android:layout_height="12dp"/>

                    <TextView
                        android:layout_marginLeft="15dp"
                        android:text="@string/rd_pickup"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>



                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:paddingLeft="15dp"
            android:text="Select Items"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:id="@+id/header_layout_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/label_quantity"
                android:textSize="13sp"
                android:textStyle="normal"
                android:textColor="@color/colorBlack"
                android:text="Item"
                android:layout_width="170dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"/>

            <TextView


                android:id="@+id/label_item"
                android:layout_toRightOf="@+id/label_quantity"

                android:textSize="13sp"
                android:textStyle="normal"
                android:textColor="@color/colorBlack"
                android:text="Qty"
                android:layout_width="60dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/label_price"
                android:layout_toRightOf="@id/label_item"

                android:textSize="13sp"
                android:textStyle="normal"
                android:textColor="@color/colorBlack"
                android:text="Total"
                android:gravity="center"
                android:layout_width="85dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/data_layout_ID"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txt_quantity"
                android:textColor="@color/colorBlack"
                android:text=""
                android:layout_marginRight="10dp"
                android:layout_width="170dp"
                android:background="@drawable/edit_text_layout_bg_lightblue"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:paddingLeft="15dp"
                android:textColorHint="@color/colorBlack"
                android:textStyle="normal"
                android:inputType="text"
                android:singleLine="true" />

            <EditText
                android:id="@+id/txt_item"
                android:layout_toRightOf="@+id/txt_quantity"
                android:textColor="@color/colorBlack"
                android:text=""
                android:layout_width="60dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edit_text_layout_bg_lightblue"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:paddingLeft="15dp"
                android:textColorHint="@color/colorBlack"
                android:textStyle="normal"
                android:inputType="text"
                android:singleLine="true" />

            <EditText
                android:id="@+id/txt_price"
                android:layout_toRightOf="@+id/txt_item"
                android:textColor="@color/colorBlack"
                android:text=""
                android:layout_width="85dp"
                android:background="@drawable/edit_text_layout_bg_lightblue"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:paddingLeft="15dp"
                android:textColorHint="@color/colorBlack"
                android:textStyle="normal"
                android:inputType="text"
                android:singleLine="true" />

        </RelativeLayout>





        <ImageView
            android:id="@+id/btn_save"
            android:layout_gravity="right"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="15dp"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/plus_icon"
            android:background="@drawable/login_btn_bg"
            android:padding="3dp"
            android:textStyle="bold"
            android:text="@string/btn_save"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />



        <Button
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/other_btn_bg"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="@string/lbl_save_order"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />


    </LinearLayout>

</ScrollView>